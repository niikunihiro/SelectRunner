{% extends 'layout/base.html.twig' %}
{% block title %}Select Runner{% endblock %}
{% block content %}
    <form method="post" action="/">
        <div class="form-group">
            <label for="queryInput">Please Input Select Query</label>
            {{ form.input('query')|raw }}
            {{ form.error('query') }}
            {% if error %}
            <p class="text-danger">{{ error }}</p>
            {% endif %}
        </div>
        <button type="submit" class="btn btn-default btn-success">Submit</button>
    </form>

    {% if results %}
        <hr>
        <div class="">
            <table class="table table-bordered table-striped">
                <thead>
                <tr class="">
                    {% for header in headers %}
                        <th>{{ header }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        {% for header in headers %}
                            <th>{{ result[header] }}</th>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}
